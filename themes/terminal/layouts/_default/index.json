[   
    {{ $list := (where .Site.Pages "Type" "==" "posts") }}
    {{ $len := (len $list)}}
    {{ range $index, $page := $list }}
        {{- if $page.Plain -}}
                {
                    "href": "{{ $page.Permalink }}",
                    "title": "{{ htmlEscape $page.Title }}",
                    "categories": [{{ range $tindex, $tag := $page.Params.categories }}{{ if $tindex }}, {{ end }}"{{ $tag| htmlEscape }}"{{ end }}]
                }
                {{- if (lt (add $index 1) $len) }}
                ,
                {{- end }}
            {{- end -}}
    {{- end -}}
]